{
	"name": "console-log-linter",
	"displayName": "Console Log Linter and Remover",
	"description": "A slick extension that flags console.* statements with information messages (blue squiggly line) and makes removing them easy",
	"author": "Anna Aitchison",
	"license": "MIT",
	"version": "1.2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Ara225/console-log-linter"
	},
    "icon": "images/icon.png",
	"galleryBanner": {
		"color": "#F0F8FF",
		"theme": "dark"
	},
	"publisher": "ara225",
	"categories": [
		"Other"
	],
	"keywords": [
		"console.log remover"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:typescript",
		"onLanguage:html",
		"onLanguage:javascriptreact",
		"onLanguage:typescriptreact",
		"onCommand:extension.removeConsoleLog",
		"onCommand:extension.removeConsoleError",
		"onCommand:extension.removeConsoleDebug",
		"onCommand:extension.removeConsoleWarn",
        "onCommand:extension.removeAllConsoleStatements"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"consoleLogLinter.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"consoleLogLinter.regexToMatch": {
					"scope": "resource",
					"type": "string",
					"default": "\\bconsole\\.(log|warn|error|debug)\\b",
					"description": "The regex to match. Completely configurable - as long as it's a valid JS regex, it'll work"
				},
				"consoleLogLinter.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"commands": [
			{
				"command": "extension.removeConsoleLog",
				"title": "Remove all console.log statements"
			},
			{
				"command": "extension.removeConsoleError",
				"title": "Remove all console.error statements"
			},
			{
				"command": "extension.removeConsoleDebug",
				"title": "Remove all console.debug statements"
			},
			{
				"command": "extension.removeConsoleWarn",
				"title": "Remove all console.warn statements"
			},
			{
				"command": "extension.removeAllConsoleStatements",
				"title": "Remove all console.* statements"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.38",
		"@typescript-eslint/parser": "^2.31.0",
		"eslint": "^6.4.0",
		"mocha": "^6.2.2",
		"typescript": "^3.8.3"
	}
}
